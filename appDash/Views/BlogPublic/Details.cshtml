@model appDash.Models.Blog

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h1 class="display-4">Detail</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Html.DisplayFor(model => model.Title)</h4>
            <p class="card-text">@Html.DisplayFor(model => model.Content)</p>
            <p class="card-text">Publication Date: @Html.DisplayFor(model => model.PublicationDate)</p>
            <p class="card-text">Author: @Html.DisplayFor(model => model.AuthorEmail)</p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>
