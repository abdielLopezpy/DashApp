@model IEnumerable<appDash.Models.Blog>

@{
    ViewData["Title"] = "All Posts";
}

<div class="container mt-4">
    <h1 class="display-4">All Posts</h1>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Content)</p>
                        <p class="card-text">Publication Date: @Html.DisplayFor(modelItem => item.PublicationDate)</p>
                        <p class="card-text">Author: @Html.DisplayFor(modelItem => item.AuthorEmail)</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <!-- Puedes agregar más acciones aquí -->
                    </div>
                </div>
            </div>
        }
    </div>
</div>
